name: "python-sandbox"
description: "Sandboxed environment for running Python scripts"

mode: ONCE
hostname: "sandbox"
time_limit: 10
cwd: "/sandbox"

mount {
  dst: "/tmp"
  src: "/tmp"
  is_bind: true
  rw: true
}

mount {
  dst: "/tmp/scripts"
  src: "/tmp/scripts"
  is_bind: true
  rw: true
}

mount {
  dst: "/sandbox"
  src: "/sandbox"
  is_bind: true
  rw: true
}

mount {
  dst: "/app"
  src: "/app"
  is_bind: true
  rw: false
}

mount {
  dst: "/usr"
  src: "/usr"
  is_bind: true
  rw: false
}

mount {
  dst: "/lib"
  src: "/lib"
  is_bind: true
  rw: false
}

mount {
  dst: "/bin"
  src: "/bin"
  is_bind: true
  rw: false
}

mount {
  dst: "/opt"
  src: "/opt"
  is_bind: true
  rw: false
}

mount {
  dst: "/proc"
  fstype: "proc"
  options: "hidepid=2"
}

mount {
  dst: "/dev"
  fstype: "tmpfs"
  rw: true
}

rlimit_as: 2048
rlimit_cpu: 10
rlimit_fsize: 64
rlimit_nofile: 64

clone_newnet: true
clone_newuser: true
clone_newns: true
clone_newpid: true
clone_newipc: true
clone_newuts: true

keep_env: false
envar: "PATH=/usr/local/bin:/usr/bin:/bin"
envar: "PYTHONPATH=/app" 